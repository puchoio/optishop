apiVersion: networking.istio.io/v1alpha3
kind: Gateway
metadata:
  name: scraper-gateway
spec:
  selector:
    istio: ingressgateway # use istio default controller
  servers:
  - port:
      number: 80
      name: http
      protocol: HTTP
    hosts:
    - "*"
---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: scraper-virtualservice
spec:
  hosts:
  - "*"
  gateways:
  - scraper-gateway
  http:
  - match:
    - uri:
        exact: /hello
    route:
    - destination:
        host: scraper
        port:
          number: 8090
